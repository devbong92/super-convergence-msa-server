{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "start:distributor": {
      "dependsOn": ["build"],
      "cache": false
    },
    "start:gate": {
      "dependsOn": ["start:distributor"],
      "cache": false
    },
    "start:lobby": {
      "dependsOn": ["start:gate"],
      "cache": false
    },
    "start:room": {
      "dependsOn": ["start:lobby"],
      "cache": false
    },
    "start:ice": {
      "dependsOn": ["start:room"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
